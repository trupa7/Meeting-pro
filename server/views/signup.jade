extends layout

block content
  .container
    form.form-signin(role="form", action="/signup", method="post" style="max-width: 300px;")
    h2.form-signin-heading Sign Up here
    input.form-control(type="text" name="email", placeholder="Your Email")
    input.form-control(type="password" name="password", placeholder="Your Password")
    button.btn.btn-lg.btn-primary.btn-block(type="submit") Signup