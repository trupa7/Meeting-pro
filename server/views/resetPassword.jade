extends layout

block content
  .container
   form.form-signin(role="form", action="/resetPassword", method="post" style="max-width: 300px;")
    h2.form-signin-heading Reset Password here
    input.form-control(type="email" name="email", placeholder="Your email")
    input.form-control(type="password" name="newPassword", placeholder="Your New Password")
    button.btn.btn-lg.btn-primary.btn-block(type="submit") Reset Password